{
  "name": "graphql-thinky",
  "version": "0.1.7",
  "description": "GraphQL & Relay powered by thinky / RethinkDB",
  "main": "lib/index.js",
  "scripts": {
    "check": "node_modules/.bin/xo src/*.js src/**/*.js",
    "test": "npm run check && node_modules/.bin/ava --verbose && rm -rf rethinkdb_data",
    "build": "BABEL_ENV=production babel src -d lib"
  },
  "dependencies": {
    "graphql-relay": "^0.4.1",
    "lodash": "^4.0.0",
    "thinky-export-schema": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.3",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "babel-runtime": "^6.0.8",
    "chai": "^3.0.0",
    "chai-as-promised": "^5.1.0",
    "eslint": "^1.7.3",
    "graphql": "^0.5.0",
    "nyc": "^6.4.4",
    "sinon": "^1.15.4",
    "sinon-as-promised": "^4.0.0",
    "sinon-chai": "^2.8.0",
    "thinky": "^2.3.2",
    "xo": "^0.15.1"
  },
  "peerDependencies": {
    "graphql": "^0.5.0",
    "thinky": "^2.3.2"
  },
  "ava": {
    "files": [
      "test/integration/*.js",
      "test/unit/*.js"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "ignore": "test/",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "author": "Fabrizio Fenoglio",
  "license": "MIT",
  "xo": {
    "esnext": true,
    "ignore": ["example/**"],
    "rules": {
      "xo/filename-case": ["error", {"case": "camelCase"}],
      "one-var": 0,
      "indent": [2, 2, {"SwitchCase": 1}],
      "dot-notation": 0
    }
  }
}
